.header {
	position: relative;
	text-align: center;
	display: block;
	width: 100%;
	height: auto;
}

.header #logo {
	left: 5%;
	position: absolute;
	width: 25%;
	height: auto;
	z-index: 100;
}

.nav-links ul {
	right: 2%;
	position: absolute;
	white-space: nowrap;
  list-style-type: none;
  margin: 0;
	padding-top: 15px;
	z-index: 9999999;
}

.nav-links ul li {
	display: inline;
	padding: 5px;
}

.nav-links ul li a {
  font-family: 'Roboto', sans-serif;
	font-weight: 700;
	font-size: 1em;
	color: #DDDDDD;
	text-decoration: none;
	padding-bottom: 5px;
	transition: 0.3s;
}

.nav-links ul li button {
  font-family: 'Roboto', sans-serif;
	font-weight: 700;
	font-size: 1em;
	color: #DDDDDD;
	border: none;
	background-color: transparent;
	text-decoration: none;
	padding-bottom: 5px;
	transition: 0.3s;
}

.nav-links ul #courses:hover #dropdown-courses {
  display: flex;
	flex-direction: column;
	z-index: 10;
}

.nav-links ul #about:hover #dropdown-about {
  display: flex;
	flex-direction: column;
	z-index: 10;
}

.nav-links ul #resources:hover #dropdown-resources {
  display: flex;
	flex-direction: column;
	z-index: 10;
}

.nav-links ul #blog:hover #dropdown-blog {
  display: flex;
	flex-direction: column;
	z-index: 10;
}

.nav-links ul #account:hover #dropdown-account {
  display: flex;
	flex-direction: column;
	z-index: 10;
}

.nav-links ul li a:hover {
	border-bottom: 1px solid #F49AC0;
}

.nav-links ul li .dropdown-wrapper {
	display: inline-block;
	position: relative;
}


.dropdown {
	display: none;
	background-color: rgba(199, 199, 199, 0.1);
	border-radius: 5px;
	position: absolute;
	width: auto;
  overflow: auto;
}

.nav-links ul li .dropdown a {
	border-radius: 5px;
	text-align: left;
	color: #D9D9D9;
	padding: 5px;
  font-family: 'Roboto', sans-serif;
	font-weight: 400;
}

.nav-links ul li .dropdown a:hover {
	background-color: rgba(244, 154, 192, 0.1);
	border-bottom: 1px solid #F49AC0;
}

.logo {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
  font-family: 'Roboto', sans-serif;
	font-size: 3.5rem;
}
